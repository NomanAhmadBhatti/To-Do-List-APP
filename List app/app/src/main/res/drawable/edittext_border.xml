<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#256E71" /> <!-- Shadow color -->
            <corners android:radius="16dp" /> <!-- Outer rounded corners -->
        </shape>
    </item>

    <!-- Outer Background -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6EFFEE"
                android:endColor="#6EFFEE"
                android:angle="90" /> <!-- Gradient angle -->
            <corners android:radius="14dp" /> <!-- Outer rounded corners -->
        </shape>
    </item>

    <!-- Inner Stroke -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#6EFFEE" /> <!-- Inner stroke color -->
            <corners android:radius="12dp" /> <!-- Inner rounded corners -->
        </shape>
    </item>

    <!-- Content Background -->
    <item android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#256E71" /> <!-- Content background color -->
            <corners android:radius="10dp" /> <!-- Inner rounded corners -->
        </shape>
    </item>
</layer-list>
