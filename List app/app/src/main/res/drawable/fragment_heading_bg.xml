<!-- fragment_heading_bg.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#256E71"
            android:endColor="#5EAE31"
            android:angle="90" /> <!-- Gradient angle (vertical) -->
        </shape>
    </item>

    <!-- Bottom shadow -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#132121"
                android:endColor="#256E71"
                android:angle="90" /> <!-- Shadow angle (vertical) -->
        </shape>
    </item>
</layer-list>
